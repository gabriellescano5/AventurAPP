<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="4dp"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/idVuelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:text="@string/ejemploCodigo" />

        <TextView
            android:id="@+id/paisOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idVuelo"
            android:text="@string/nomPaisOrigen"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paisDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paisOrigen"
            android:text="@string/nomPaisDestino"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/fechaOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/paisDestino"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLength="30"
            android:maxLines="1"
            android:text="@string/fechaOrigen" />

        <TextView
            android:id="@+id/horarioOrigen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fechaOrigen"
            android:text="@string/horarioOrigen"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/fechaDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horarioOrigen"
            android:text="@string/fechaDestino"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/horarioDestino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fechaDestino"
            android:text="@string/horarioDestino"
            android:textColor="@color/black" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>